                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding Path=(IsEnabled), ElementName=C1}" Value="true" />
                                            <Condition Binding="{Binding Path=(IsEnabled), ElementName=C2}" Value="true" />
